[Unit]
Description = {{ unit_description }}
After = syslog.target sympa.service

[Service]
User = {{ sympa.unix_user }}
Group = {{ sympa.unix_group }}
ExecStart = /usr/bin/multiwatch -f $FCGI_CHILDREN -- \
          {{ install_prefix }}/{{ sympa.install_dir_name }}/bin/{{ unit_name }}.fcgi
StandardOutput = null
StandardInput = socket
StandardError = null
Restart=always
StandardOutput = null
StandardInput = socket
StandardError = null
Environment="FCGI_CHILDREN={{ sympa.web[ vars[unit_name] + '_procs' ] }}"
EnvironmentFile=-/etc/default/sympa
Restart=on-failure

[Install]
WantedBy = multi-user.target
 